{
  "swagger": "2.0",
  "info": {
    "title": "Gameworks Registry API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/publishers": {
      "get": {
        "summary": "Retrieve all Publisher accounts",
        "tags": [
          "Publishers"
        ],
        "description": "Retrieve all publisher accounts.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "publisher(s) found.",
            "examples": {
              "application/json": {
                "data": {
                  "user_id": "1",
                  "type": "publisher",
                  "attributes": {
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/publishers/{:user_id}": {
      "get": {
        "summary": "Retrieve a specific Publisher",
        "tags": [
          "Publishers"
        ],
        "description": "Retrieve a specific publisher by specifying its 'user_id'.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "'user_id' of the publisher being retrieved",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "publisher found.",
            "examples": {
              "application/json": {
                "data": {
                  "user_id": "1",
                  "type": "publisher",
                  "attributes": {
                  }
                }
              }
            }
          },
          "404": {
            "description": "publisher not found."
          }
        }
      }
    }
  }
}