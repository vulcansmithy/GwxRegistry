{
  "swagger": "2.0",
  "info": {
    "title": "Gameworks Registry API V1",
    "version": "v1"
  },
  "paths": {
    "/users": {
      "get": {
        "summary": "Retrieve all User accounts",
        "tags": [
          "Users"
        ],
        "description": "Retrieve all User accounts.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "user(s) found.",
            "examples": {
              "application/json": {
                "data": [
                  {
                    "id": "147",
                    "type": "user",
                    "attributes": {
                      "id": 147,
                      "first_name": "Ismael",
                      "last_name": "Koss",
                      "email": "ismael.koss@example.com",
                      "wallet_address": null
                    }
                  },
                  {
                    "id": "148",
                    "type": "user",
                    "attributes": {
                      "id": 148,
                      "first_name": "Shenika",
                      "last_name": "Halvorson",
                      "email": "shenika.halvorson@example.com",
                      "wallet_address": null
                    }
                  },
                  {
                    "id": "149",
                    "type": "user",
                    "attributes": {
                      "id": 149,
                      "first_name": "Shara",
                      "last_name": "Roob",
                      "email": "shara.roob@example.com",
                      "wallet_address": null
                    }
                  },
                  {
                    "id": "150",
                    "type": "user",
                    "attributes": {
                      "id": 150,
                      "first_name": "Devon",
                      "last_name": "Abbott",
                      "email": "devon.abbott@example.com",
                      "wallet_address": null
                    }
                  },
                  {
                    "id": "151",
                    "type": "user",
                    "attributes": {
                      "id": 151,
                      "first_name": "Milissa",
                      "last_name": "Dicki",
                      "email": "milissa.dicki@example.com",
                      "wallet_address": null
                    }
                  }
                ]
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a User account",
        "tags": [
          "Users"
        ],
        "description": "Create a user account.",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "first_name": {
                  "type": "string"
                },
                "last_name": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "password_confirmation": {
                  "type": "string"
                }
              },
              "required": [
                "email",
                "password",
                "password_confirmation"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "user created.",
            "examples": {
              "application/json": {
                "data": {
                  "id": "158",
                  "type": "user",
                  "attributes": {
                    "id": 158,
                    "first_name": "Mohammed",
                    "last_name": "Graham",
                    "email": "mohammed.graham@example.com",
                    "wallet_address": null
                  }
                }
              }
            }
          },
          "400": {
            "description": "Unable to create a new User. Bad request."
          }
        }
      }
    },
    "/users/{:id}": {
      "get": {
        "summary": "Retrieve a specific User",
        "tags": [
          "Users"
        ],
        "description": "Retrieve a specific user by specifying its 'id'.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "'id' of the user being retrieved",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "user found.",
            "examples": {
              "application/json": {
                "data": {
                  "id": "48",
                  "type": "user",
                  "attributes": {
                    "id": 48,
                    "first_name": "Luisa",
                    "last_name": "Osinski",
                    "email": "luisa.osinski@example.com",
                    "wallet_address": null
                  }
                }
              }
            }
          },
          "404": {
            "description": "user not found."
          }
        }
      }
    },
    "/users/profile_update/{:id}": {
      "patch": {
        "summary": "Update profile",
        "tags": [
          "Users"
        ],
        "description": "Update an existing User profile.",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "'id' of the user profile being updated",
            "required": true,
            "type": "string"
          },
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "first_name": {
                  "type": "string"
                },
                "last_name": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "user updated.",
            "examples": {
              "application/json": {
                "data": {
                  "id": "375",
                  "type": "user",
                  "attributes": {
                    "id": 375,
                    "first_name": "Lesley",
                    "last_name": "Reichert",
                    "email": "latasha.harris@example.com",
                    "wallet_address": null
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found."
          },
          "400": {
            "description": "Unable to update user profile."
          }
        }
      },
      "put": {
        "summary": "Update profile",
        "tags": [
          "Users"
        ],
        "description": "Update an existing User profile.",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "'id' of the user profile being updated",
            "required": true,
            "type": "string"
          },
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "first_name": {
                  "type": "string"
                },
                "last_name": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "user updated.",
            "examples": {
              "application/json": {
                "data": {
                  "id": "245",
                  "type": "user",
                  "attributes": {
                    "id": 245,
                    "first_name": "Chi",
                    "last_name": "Sipes",
                    "email": "mason.mcclure@example.com",
                    "wallet_address": null
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found."
          },
          "400": {
            "description": "Unable to update user profile."
          }
        }
      }
    }
  }
}