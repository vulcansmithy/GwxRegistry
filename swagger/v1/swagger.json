  "paths": {
    "/users": {
      "get": {
        "summary": "Retrieve all User accounts",
        "tags": [
          "Users"
        ],
        "description": "Retrieve all User accounts.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "user(s) found.",
            "examples": {
              "application/json": {
                "data": {
                  "id": "1",
                  "type": "user",
                  "attributes": {
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a User account",
        "tags": [
          "Users"
        ],
        "description": "Create a user account.",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "first_name": {
                  "type": "string"
                },
                "last_name": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "password_confirmation": {
                  "type": "string"
                }
              },
              "required": [
                "email",
                "password",
                "password_confirmation"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "user created.",
            "examples": {
              "application/json": {
                "data": {
                  "id": "1",
                  "type": "user",
                  "attributes": {
                  }
                }
              }
            }
          },
          "400": {
            "description": "Unable to create a new User. Bad request."
          }
        }
      }
    },
    "/users/{:id}": {
      "get": {
        "summary": "Retrieve a specific User",
        "tags": [
          "Users"
        ],
        "description": "Retrieve a specific user by specifying its 'id'.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "'id' of the user being retrieved",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "user found.",
            "examples": {
              "application/json": {
                "data": {
                  "id": "1",
                  "type": "user",
                  "attributes": {
                  }
                }
              }
            }
          },
          "404": {
            "description": "user not found."
          }
        }
      },
